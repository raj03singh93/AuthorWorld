@model IEnumerable<AuthorWorld.DTOs.DTOs.AuthorDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Author List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="AddEditAuthor" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Author
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
        <tr>
            <td width="20%">@obj.Name</td>
            <td width="30%">@obj.Email</td>
            <td width="30%">@obj.PhoneNumber</td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Home" asp-route-Id="@obj.Id" asp-action="AddEditAuthor" class="btn btn-primary">
                        EDIT
                    </a>
                    <a asp-controller="Home" asp-route-Id="@obj.Id" asp-action="Delete" data-id="@obj.Id"class="btn btn-danger ml-2 delete" >
                        DELETE
                    </a>
                </div>
            </td>
        </tr>                }
    </tbody>
</table> }
            else
            {
<p> No Author exists.</p>}
@section scripts {
    <script>
        $(function () {
            debugger;
            $(".delete").click(function (e) {
                debugger;
                let confirmation = confirm("Are you sure you want to delete the author?");
                if (confirmation === false)
                    e.preventDefault();
            })
        });
    </script>
}

</div>
